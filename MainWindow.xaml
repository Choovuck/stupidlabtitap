                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="NumMark" Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:MarkViewModel}">
                                            <StackPanel>
                                                <TextBox Visibility="{Binding Path=IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBox.Text>
                                                        <Binding Path="NumMark"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             Converter="{StaticResource Int32Converter}"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                                            <Binding.ValidationRules>
                                                                <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                                                <validation:NumericValidationRule ValidatesOnTargetUpdated="True" ValidationType="{x:Type system:Int32}"/>
                                                            </Binding.ValidationRules>
                                                        </Binding>
                                                    </TextBox.Text>
                                                </TextBox>
                                                <TextBlock Text="{Binding NumMark, Converter={StaticResource Int32Converter}}" Visibility="{Binding Path=IsEdited, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="NormMark" Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:MarkViewModel}">
                                            <StackPanel>
                                                <TextBox Visibility="{Binding Path=IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBox.Text>
                                                        <Binding Path="NormMark"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             Converter="{StaticResource Int32Converter}"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                                            <Binding.ValidationRules>
                                                                <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                                                <validation:NumericValidationRule ValidatesOnTargetUpdated="True" ValidationType="{x:Type system:Int32}"/>
                                                            </Binding.ValidationRules>
                                                        </Binding>
                                                    </TextBox.Text>
                                                </TextBox>
                                                <TextBlock Text="{Binding NormMark, Converter={StaticResource Int32Converter}}" Visibility="{Binding Path=IsEdited, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Actions" Width="165">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Button DockPanel.Dock="Left" Content="Edit" Padding="5" Width="75"/>
                                                <Button DockPanel.Dock="Right" Content="Delete" Padding="5" Width="75"/>
                                            </DockPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Grid.Row="2" Grid.Column="0" DataContext="{Binding NewMark}" VerticalAlignment="Top" Margin="10,10,10,0">
                        <Grid.Resources>
                            <Style TargetType="TextBox"  BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Margin" Value="0,0,10,0"/>
                            </Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Margin" Value="0,0,10,0"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="185*"/>
                            <ColumnDefinition Width="185*"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="165*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>
                        <Label Content="MName"/>
                        <Label Grid.Row="0" Grid.Column="1" Content="Criterion"/>
                        <Label Grid.Row="0" Grid.Column="2" Content="MRange"/>
                        <Label Grid.Row="0" Grid.Column="3" Content="NumMark"/>
                        <Label Grid.Row="0" Grid.Column="4" Content="NormMark"/>
                        <TextBox Grid.Row="1" Grid.Column="0">
                            <TextBox.Text>
                                <Binding Path="MName"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                    <Binding.ValidationRules>
                                        <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="cBox" SelectedItem="{Binding Criterion}" DisplayMemberPath="CDisplay"/>
                        <TextBox Grid.Row="1" Grid.Column="2">
                            <TextBox.Text>
                                <Binding Path="MRange"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             Converter="{StaticResource Int32Converter}"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                    <Binding.ValidationRules>
                                        <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                        <validation:NumericValidationRule ValidatesOnTargetUpdated="True" ValidationType="{x:Type system:Int32}"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox Grid.Row="1" Grid.Column="3">
                            <TextBox.Text>
                                <Binding Path="NumMark"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             Converter="{StaticResource Int32Converter}"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                    <Binding.ValidationRules>
                                        <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                        <validation:NumericValidationRule ValidatesOnTargetUpdated="True" ValidationType="{x:Type system:Int32}"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox Grid.Row="1" Grid.Column="4">
                            <TextBox.Text>
                                <Binding Path="NormMark"
                                                             Mode="TwoWay"
                                                             UpdateSourceTrigger="PropertyChanged"
                                                             Converter="{StaticResource Int32Converter}"
                                                             ValidatesOnDataErrors="True"
                                                             ValidatesOnExceptions="True"
                                                             NotifyOnValidationError="True">
                                    <Binding.ValidationRules>
                                        <validation:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                                        <validation:NumericValidationRule ValidatesOnTargetUpdated="True" ValidationType="{x:Type system:Int32}"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <Button Grid.Row="1" Grid.Column="5" Click="AddMark" Content="Add new Mark"/>
                    </Grid>
                    
                    <ListView Name="vectorView" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Vectors}" Margin="0,5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="VNum" Width="50" DisplayMemberBinding="{Binding VNum, Converter={StaticResource Int32Converter}}"/>
                                <GridViewColumn Header="Alternative" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:VectorViewModel}">
                                            <StackPanel>
                                                <ComboBox Visibility="{Binding Path=IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}" ItemsSource="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType=ListView}, Path=DataContext.Alternatives}" DisplayMemberPath="ADisplay" SelectedItem="{Binding Alternative}"/>
                                                <TextBlock Text="{Binding Path=Alternative.ADisplay}" Visibility="{Binding Path=IsEdited, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Mark" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:VectorViewModel}">
                                            <StackPanel>
                                                <ComboBox Visibility="{Binding Path=IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}" ItemsSource="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType=ListView}, Path=DataContext.Marks}" DisplayMemberPath="MDisplay" SelectedItem="{Binding Mark}"/>
                                                <TextBlock Text="{Binding Path=Mark.MDisplay}" Visibility="{Binding Path=IsEdited, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Actions" Width="115">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Button DockPanel.Dock="Left" Content="Edit" Padding="5" Width="55"/>
                                                <Button DockPanel.Dock="Right" Content="Delete" Padding="5" Width="55"/>
                                            </DockPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Grid Grid.Row="2" Grid.Column="1" DataContext="{Binding NewVector}" VerticalAlignment="Top" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="145*"/>
                            <ColumnDefinition Width="145*"/>
                            <ColumnDefinition Width="115*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="50*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Alternative"/>
                        <Label Content="Mark" Grid.Row="0" Grid.Column="1"/>
                        
                        <ComboBox Margin="0,0,5,0" Name="aBox" SelectedItem="{Binding Alternative}" DisplayMemberPath="ADisplay" Grid.Column="0" Grid.Row="1"/>
                        <ComboBox Margin="0,0,5,0" Name="mBox" SelectedItem="{Binding Mark}" DisplayMemberPath="MDisplay" Grid.Row="1" Grid.Column="1"/>
                        <Button Grid.Column="2" Grid.Row="1" Click="AddVector" Content="Add new Vector"></Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
